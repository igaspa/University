{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "start:dev": "node -r dotenv/config server dotenv_config_path=.env.development",
    "watch:dev": "nodemon -r dotenv/config server dotenv_config_path=.env.development",
    "migrate:dev": "cd src/database && npx sequelize-cli db:migrate --env=development",
    "migrate:undo:dev": "cd src/database && npx sequelize-cli db:migrate:undo --env=development",
    "migrate:undo:all:dev": "cd src/database && npx sequelize-cli db:migrate:undo:all --env=development",
    "seed:all:dev": "cd src/database && npx sequelize-cli db:seed:all --env=development",
    "seed:undo:all:dev": "cd src/database && npx sequelize-cli db:seed:undo:all --env=development",

    "start:stage": "node -r dotenv/config server dotenv_config_path=.env.stage",
    "watch:stage": "nodemon -r dotenv/config server dotenv_config_path=.env.stage",
    "migrate:stage": "cd src/database && npx sequelize-cli db:migrate --env=stage",
    "migrate:undo:stage": "cd src/database && npx sequelize-cli db:migrate:undo --env=stage",
    "migrate:undo:all:stage": "cd src/database && npx sequelize-cli db:migrate:undo:all --env=stage",
    "seed:all:stage": "cd src/database && npx sequelize-cli db:seed:all --env=stage",
    "seed:undo:all:stage": "cd src/database && npx sequelize-cli db:seed:undo:all --env=stage",

    "start:test": "node -r dotenv/config server dotenv_config_path=.env.test",
    "watch:test": "nodemon -r dotenv/config server dotenv_config_path=.env.test",
    "migrate:test": "cd src/database && npx sequelize-cli db:migrate --env=test",
    "migrate:undo:test": "cd src/database && npx sequelize-cli db:migrate:undo --env=test",
    "migrate:undo:all:test": "cd src/database && npx sequelize-cli db:migrate:undo:all --env=test",
    "seed:all:test": "cd src/database && npx sequelize-cli db:seed:all --env=test",
    "seed:undo:all:test": "cd src/database && npx sequelize-cli db:seed:undo:all --env=test",
    
    "test": "jest --runInBand",
    "generate-swagger": "node swagger.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0",
    "swagger-ui-express": "^4.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "eslint": "^8.32.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.4.1",
    "jest-html-reporter": "^3.7.0",
    "nodemon": "^2.0.20",
    "sequelize-cli": "^6.5.2",
    "supertest": "^6.3.3",
    "swagger-autogen": "^2.23.0"
  }
}
